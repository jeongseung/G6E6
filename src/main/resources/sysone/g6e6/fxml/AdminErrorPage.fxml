<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10px;" text="🔔오류 신고 목록🔔">
                <font>
                    <Font name="LG Smart UI Regular" size="12.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <AnchorPane>
                <VBox layoutX="14.0" layoutY="14.0" spacing="10">
                    <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="400.0" prefWidth="700.0">
                        <TableView fx:id="errorReportTable">
                            <columns>
                                <TableColumn fx:id="reporterColumn" prefWidth="150.0" text="신고자">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="reporter"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="userIdColumn" prefWidth="150.0" text="아이디">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="userId"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="reportContentColumn" prefWidth="200.0" text="신고 내용">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="reportContent"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="reportDateColumn" prefWidth="150.0" text="일시">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="reportDate"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="deleteColumn" prefWidth="50.0" text="삭제">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="delete"/>
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                        </TableView>
                    </ScrollPane>
                </VBox>
                <ScrollBar layoutX="748.0" layoutY="15.0" orientation="VERTICAL" prefHeight="400.0" prefWidth="15.0"/>
            </AnchorPane>
        </ScrollPane>
    </center>
</BorderPane>
